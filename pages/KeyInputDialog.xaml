<Window x:Class="SchneidMaschine.pages.KeyInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Taste zuweisen" Height="200" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        KeyDown="Window_KeyDown">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Drücken Sie die gewünschte Taste:" FontSize="16" Margin="0,0,0,20"/>

        <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="2" Padding="10" Background="LightGray">
            <TextBlock x:Name="TextBlockKey" Text="Keine Taste gedrückt" FontSize="24" FontWeight="Bold"
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="OK" Width="100" Height="35" Click="BtnOK_Click" IsEnabled="False" x:Name="BtnOK" Margin="0,0,10,0"/>
            <Button Content="Abbrechen" Width="100" Height="35" Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
